<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/welcome_text_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Hoş geldiniz" />


    <!-- Başlık -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelime Oyunu Türünü Seçiniz"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- İlk buton: Harf Sabitli Oyun -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Harf Sabitli Oyun"
        android:onClick="harfSecimi"
        android:layout_marginBottom="16dp"/>

    <!-- İkinci buton: Harf Sabiti Olmayan Oyun -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Harf Sabiti Olmayan Oyun"
        android:onClick="harfSecimi2"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
