<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp"
    android:gravity="center">

    <!-- Başlık -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harf Sabitli Oyunda Harf Sayısını Seçin"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>



    <!-- Butonlar -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4 Harfli Kelime"
        android:id="@+id/button4Harfli"
        android:onClick="KanalHarfSabitli4"
        android:layout_marginBottom="16dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5 Harfli Kelime"
        android:id="@+id/button5Harfli"
        android:layout_marginBottom="16dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6 Harfli Kelime"
        android:id="@+id/button6Harfli"
        android:layout_marginBottom="16dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7 Harfli Kelime"
        android:id="@+id/button7Harfli"/>

</LinearLayout>
